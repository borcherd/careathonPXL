<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button8"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="272dp"
        android:text="linkerbeen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="72dp"
        android:text="rechterbeen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nieuwe oefening"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="156dp"
        android:text="linkerhand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToSelectKeypointLeftHand"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="72dp"
        android:text="rechterhand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToSelectKeypointRightHand"/>

</androidx.constraintlayout.widget.ConstraintLayout>