<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Sporters"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="268dp"
        android:text="sporters bekijken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Symbols"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="72dp"
        android:text="symbolen aanpassen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="G-Karate"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/SelectExercise"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="156dp"
        android:text="Selecteer oefening"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToExerciseSelection"/>

    <Button
        android:id="@+id/AddExercise"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="72dp"
        android:text="oefening toevoegen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="goToNewExercise"/>

</androidx.constraintlayout.widget.ConstraintLayout>